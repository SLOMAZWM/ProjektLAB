            </StackPanel>

            <Separator Grid.Row="2" Background="#E8DDB5"/>

            <DataGrid x:Name="TrainScheduleDataGrid" Grid.Row="3" AutoGenerateColumns="False" Margin="10" Style="{StaticResource CustomDataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Stacja początkowa" Binding="{Binding DepartureStation}" />
                    <DataGridTextColumn Header="Stacja końcowa" Binding="{Binding ArrivalStation}" />
                    <DataGridTextColumn Header="Godzina rozpoczęcia" Binding="{Binding ArrivalTime}" />
                    <DataGridTextColumn Header="Godzina zakończenia" Binding="{Binding DepartureTime}" />
                    <DataGridTextColumn Header="Opóźnienia" Binding="{Binding DelayTime}" />
                    <DataGridTextColumn Header="Data wyjazdu" Binding="{Binding DepartureDate}" />
                    <DataGridTextColumn Header="Przewoźnik" Binding="{Binding Train.Carrier}" />
                    <DataGridTextColumn Header="Rodzaj pociągu" Binding="{Binding Train.TrainType}" />
                    <DataGridTextColumn Header="Numer pociągu" Binding="{Binding Train.TrainNumber}" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

    </Border>
    
</Page>
