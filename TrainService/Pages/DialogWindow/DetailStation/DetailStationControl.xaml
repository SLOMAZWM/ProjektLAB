<UserControl x:Class="ProjektLAB.TrainService.Pages.DialogWindow.DetailStation.DetailStationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjektLAB.TrainService.Pages.DialogWindow.DetailStation"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">
    <Border Background="Gray" BorderThickness="1" BorderBrush="Black" CornerRadius="20">
        <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
            <TextBox x:Name="ArrivalTimeTextBox" />
            <TextBox x:Name="DepartureTimeTextBox" />
            <!-- Możesz dodać więcej elementów interfejsu użytkownika w zależności od potrzeb -->
        </StackPanel>
    </Grid>
    </Border>
</UserControl>
