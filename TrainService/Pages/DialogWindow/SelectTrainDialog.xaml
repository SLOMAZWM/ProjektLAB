<Window x:Class="ProjektLAB.TrainService.Pages.DialogWindow.SelectTrainDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektLAB.TrainService.Pages.DialogWindow"
        mc:Ignorable="d"
                             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"

    Title="SelectTrainDialog" Height="500" Width="1025" Background="Transparent" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border Background="Gray" BorderThickness="1" BorderBrush="Black" CornerRadius="20" MouseDown="MouseDown_Click">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Grid.Row="0">
                <Button Style="{StaticResource topButton}" Click="ExitBtn_Click">
                    <Icon:PackIconMaterial Kind="LocationExit"/>
                </Button>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Vertical" Grid.Row="1">

                <DataGrid x:Name="TrainDataGrid" Style="{StaticResource CustomDataGridStyle}" AutoGenerateColumns="False" Width="975">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Numer Pociągu" Binding="{Binding TrainNumber}" Width="auto"/>
                        <DataGridTextColumn Header="Przewoźnik" Binding="{Binding Carrier}" Width="auto"/>
                        <DataGridTextColumn Header="Typ Pociągu" Binding="{Binding TrainType}" Width="auto"/>
                        <DataGridTextColumn Header="Liczba miejsc (siedzących)" Binding="{Binding NumberOfSeats}" Width="auto"/>
                        <DataGridTextColumn Header="Przedziałowe wagony" Binding="{Binding CompartmentCar}" Width="auto"/>
                        <DataGridTextColumn Header="Bezprzedziałowe wagony" Binding="{Binding OpenCar}" Width="auto"/>
                        <DataGridTextColumn Header="Przedziały z łóżkami" Binding="{Binding SleepingCar}" Width="auto"/>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>

        </Grid>

    </Border>
</Window>
