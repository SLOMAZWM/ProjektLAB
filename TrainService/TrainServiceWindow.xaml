<Window x:Class="ProjektLAB.TrainService.TrainServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektLAB.TrainService"
        mc:Ignorable="d"
                 xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Główne okno aplikacji - SSD" Height="650" Width="1240" Background="Transparent" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">

    <Border Background="Gray" CornerRadius="30" BorderThickness="1" BorderBrush="#E8DDB5" MouseDown="Border_MouseDown">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="125"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right">
                <Button x:Name="ExitBtn" VerticalAlignment="Top" Margin="10" Style="{StaticResource topButton}" Click="ExitBtn_Click">
                    <Icon:PackIconMaterial Kind="ExitRun" Width="20" Height="20"/>
                </Button>
            </StackPanel>


            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" x:Name="TitleLbl" Style="{StaticResource TopLabel}" Content="AKTUALNY TERMINARZ" FontWeight="Medium"/>

            <Border Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" CornerRadius="0,10,10,0" BorderThickness="1" BorderBrush="#E8DDB5" Background="#333333">


            </Border>


            <Border Grid.Column="0" Background="Gray" CornerRadius="28.5,0,20,28.5" Width="125" BorderThickness="1,1,0,1" BorderBrush="#E8DDB5" Grid.RowSpan="2"/>

            <Border Grid.Row="1" Grid.Column="2" Background="Gray" CornerRadius="20,0,0,20" Width="125" Height="350">
            </Border>

            <Border Grid.Row="0" Background="Gray" Width="175" Height="80" HorizontalAlignment="Left" CornerRadius="0,0,20,0" BorderBrush="#E8DDB5" BorderThickness="0,1,1,0" Grid.ColumnSpan="2" Margin="122,0,0,0"/>

        </Grid>

    </Border>

</Window>
